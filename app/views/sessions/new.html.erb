<div id="snapuser" class="login">
	<%= form_for :session, url: sessions_path do |f| %>
		<div>
			<p>
				<%= f.label :name %><br>
				<%= f.text_field :name %>
			</p>
		</div>
		<div>
			<p>
				<%= f.label :password %><br>
				<%= f.password_field :password %>
			</p>
		</div>
		<div class="rem">
			<%= f.label :remember_me %>
			<%= f.check_box :remember_me %>
		</div>
		<%= f.submit %>

	<% end %>
</div>
